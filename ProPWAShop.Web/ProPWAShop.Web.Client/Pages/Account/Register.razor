@page "/account/register"

<section class="section-content padding-y bg">

    <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
        <article class="card-body">
            <header class="mb-4"><h4 class="card-title">Регистрация</h4></header>
            <EditForm Model="model" OnValidSubmit="SubmitAsync">

                <ErrorsList ShowErrors="ShowErrors" Errors="Errors" />
                <DataAnnotationsValidator />
                <ValidationSummary />

                <div class="form-row">
                    <div class="col form-group">
                        <label>Имя</label>
                        <InputText @bind-Value="model.FirstName" type="text" class="form-control" />
                    </div>
                    <div class="col form-group">
                        <label>Фамилия</label>
                        <InputText @bind-Value="model.LastName" type="text" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label>Телефон +38(071)-</label>
                    <InputText @bind-Value="model.Phone" type="phone" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Пароль</label>
                    <InputText @bind-Value="model.Password" type="password" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Подтверждение пароля</label>
                    <InputText @bind-Value="model.ConfirmPassword" type="password" class="form-control" />
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-block"> Зарегистрироваться </button>
                </div>
            </EditForm>
        </article>
    </div>

    <p class="text-center mt-4">Уже зарегистрированы? <a href="/account/login">Войти</a></p>
    <br /><br />

</section>
